<div class="container" style="margin-top: 25px">
    <div class="row">
        <div class="col-6">
            Welcome, <b>{{name}}</b>
        </div>
        <div class="col-6 text-right">
            <a href="/book/add"><button class="btn btn-warning text-white"><i class="fas fa-plus"></i> Add New</button></a>
        </div>
    </div>
    <div class="row" style="margin-top: 30px">
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center bg-dark text-white">
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each books as |book|}}
                    <tr class="text-center">
                        <th scope="row" id="index">{{@index}}</th>
                        <td>{{book.title}}</td>
                        <td>{{book.quantity}}</td>
                        <td>{{book.price}}</td>
                        <td style="width: 200px">
                            <a href="/book/{{book._id}}/view" class="badge badge-primary">View</a>
                            <a href="/book/{{book._id}}/edit" class="badge badge-info">Edit</a>
                            <a href="/book/{{book._id}}/delete" class="badge badge-danger">Delete</a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    document.querySelectorAll("#index").forEach(doc => {
        doc.innerHTML = parseInt(doc.innerHTML) + 1;
    })
</script>